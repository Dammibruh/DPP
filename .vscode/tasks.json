{
    "version":"2.0.0",
    "tasks":[
    {
       "label":"compile_and_run_debug",
       "type":"shell",
       "command":"",
       "args":[
         "g++",
         "-g",
         "${fileBasename}",
         "-o",
         "output/${fileBasenameNoExtension}",
         "-O0",
         "&&",
         "clear",
         "&&",
         "./output/${fileBasenameNoExtension}.out"
      ],
      "group":{
         "kind":"build",
         "isDefault":true
      },
         "problemMatcher":{
         "owner":"cpp",
         "fileLocation":[
            "relative",
            "${workspaceRoot}"
         ],
         "pattern":{
            "regexp":"^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
            "file":1,
            "line":2,
            "column":3,
            "severity":4,
            "message":5
         }
      }
    },
     {
        "label":"compile_only_debug_mode",
        "type":"shell",
        "command":"",
        "args":[
          "g++",
          "-g",
          "${fileBasename}",
          "-o",
          "output/${fileBasenameNoExtension}",
          "-O0"
       ],
       "group":{
          "kind":"build",
          "isDefault":true
       },
          "problemMatcher":{
          "owner":"cpp",
          "fileLocation":[
             "relative",
             "${workspaceRoot}"
          ],
          "pattern":{
             "regexp":"^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
             "file":1,
             "line":2,
             "column":3,
             "severity":4,
             "message":5
          }
       }
    }]
 }